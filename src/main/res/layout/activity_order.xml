<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order">
    <TextView
        android:id="@+id/ordertitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:background="@color/scndteal"
        android:text=" Order"
        android:textSize="50dp"
        />
    <Button
        android:id="@+id/myorder_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myorder"
        android:backgroundTint="@color/thrdteal"
        android:layout_margin="14dp"
        app:layout_constraintTop_toBottomOf="@id/ordertitle"
        app:layout_constraintBottom_toTopOf="@id/gambarorder"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:id="@+id/gambarorder"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ordertitle"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/namaorder"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="35dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/gambarorder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/hargaorder"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/namaorder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <EditText
        android:id="@+id/qtyorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/hargaorder"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="395dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/orderbutton"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Order"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/qtyorder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/thrdteal"
        />

</androidx.constraintlayout.widget.ConstraintLayout>